@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AidBloom</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/style1.css">
    <link rel="stylesheet" href="~/css/style2.css">
    <link rel="stylesheet" href="~/css/style3.css">
    <link rel="stylesheet" href="~/css/userdashboard.css">
    <link rel="stylesheet" href="~/css/forgetpassword.css">
    <link rel="stylesheet" href="~/css/admindashboard.css">
    <link rel="stylesheet" href="~/css/payment.css">
    <link rel="stylesheet" href="~/css/donation.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/img/logo.png" type="image/x-icon">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>
<body>
    @{
        var currentPath = HttpContextAccessor.HttpContext.Request.Path.Value?.ToLower() ?? "";
    }

    <header class="header">
        <nav class="navbar">
            <div class="logo-section">
                <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="AidBloom Logo" class="logo"></a>
                <span class="site-name">AidBloom</span>
            </div>
            <button class="menu-toggle" aria-label="Toggle menu">☰</button>
            <ul class="nav-list">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Donate">Donate</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#aboutus">About Us</a></li>
                <li><a href="#faq">FAQ</a></li>
                <li>
                    @if (currentPath.Contains("/home/user"))
                    {
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                            <button type="submit" class="register-btn">Logout</button>
                        </form>
                    </li>
                    }
                    else if (currentPath.Contains("/account/register"))
                    {
                    <li><a asp-controller="Account" asp-action="Login" class="register-btn">Login</a></li>
                    }
                    else
                    {
                    <li><a asp-controller="Account" asp-action="Register" class="register-btn">Registration / Sign Up</a></li>
                    }
                </li>
            </ul>
        </nav>
    </header>

    @RenderBody()

    <footer class="footer">
        <div class="containor">
            <div class="footer-content">
                <div class="footer-logo">
                    <img src="~/img/logo.png" alt="AidBloom Logo" class="footer-logo-img">
                    <span class="footer-site-name">AidBloom</span>
                </div>

                <div class="footer-links">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><a href="#donate">Donate</a></li>
                        <li><a href="#contact">Contact</a></li>
                        <li><a href="#aboutus">About Us</a></li>
                    </ul>
                </div>

                <div class="footer-contact">
                    <p>Contact Us:</p>
                    <a href="mailto:info@aidbloom.com" class="footer-email">info@aidbloom.com</a>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2025 AidBloom. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/payment.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
