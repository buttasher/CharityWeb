    <!-- Render the 'Scripts' section here -->
    @RenderSection("Scripts", required: false)
  
  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  <script src="~/js/script.js"></script>
  <script src="~/js/payment.js"></script>
</body>
</html>